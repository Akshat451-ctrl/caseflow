/// Prisma schema for CaseFlow application
/// Datasource: PostgreSQL
/// Run `npx prisma generate` after creating the database and installing dependencies

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"] 
}
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Roles for users
enum Role {
  ADMIN
  OPERATOR
}

// Status values for a Case import/processing
enum CaseStatus {
  NEW
  PROCESSING
  COMPLETED
  FAILED
}

model User {
  id           String    @id @default(uuid())
  email        String    @unique
  passwordHash String
  role         Role      @default(OPERATOR)
  createdAt    DateTime  @default(now())

  // Relations
  imports      ImportLog[]
  cases        Case[]    @relation("ImportedBy")
  notes        Note[]

 @@map("users")
}

model Case {
  id             String     @id @default(uuid())
  case_id        String     @unique
  applicant_name String?
  dob            DateTime?
  email          String?
  phone          String?
  category       String?
  priority       Int?
  status         CaseStatus @default(NEW)
  importedById   String?
  importedBy     User?      @relation("ImportedBy", fields: [importedById], references: [id])
  importedAt     DateTime?  @default(now())
  errorMessage   String?
  notes          Note[]

  @@index([status])
  @@index([importedById])
  @@map("cases")
}

model ImportLog {
  id            String    @id @default(uuid())
  userId        String
  user          User      @relation(fields: [userId], references: [id])
  totalRows     Int
  successCount  Int
  failCount     Int
  createdAt     DateTime  @default(now())

  @@index([userId])
  @@map("import_logs")
}

model Note {
  id        String   @id @default(uuid())
  caseId    String
  case      Case     @relation(fields: [caseId], references: [id])
  authorId  String?
  author    User?    @relation(fields: [authorId], references: [id])
  content   String
  createdAt DateTime @default(now())

  @@index([caseId])
  @@map("notes")
}